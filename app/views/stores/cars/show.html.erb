<h1><%= @car.full_name %></h1>

<div class="row center">
  <div class="col s6">
    <div class="row">
       <div class="col m12 m7">
         <div class="card">
           <div class="card-image aligh-center">
             <%= image_tag @car.image.url %>
             <br>
             <br>
             <br>
             <span class="card-title black"><%= @car.full_name %></span>
           </div>
           <div class="card-content">
             <p>Daily Price: $<%= @car.daily_price %></p>
             <p>Weekly Price: $<%= @car.weekly_price %></p>
           </div>
         </div>
       </div>
     </div>
  </div>

  <div class="col offset-s1 s5 center-align">
    <div class="center-align">
    <h3 class="grey-text center-align">Details</h3>
    <h4>Make: <%= @car.make %></h4>
    <h6><%= @car.description.capitalize %></h6>
    <br>
    <%= link_to "Add To Cart", cart_cars_path(car_id: @car.id),
                               method: :post, class: "btn center-align" %>
    </div>
  </div>
</div>
