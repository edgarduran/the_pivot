<div class="col m4">
  <div class="card medium" id="<%= car.id %>">
    <div class="card-image waves-effect waves-block waves-light">
      <%= image_tag car.image, class: "activator" %>
    </div>
    <div class="card-content" id="car_<%= car.id %>">
      <span class="card-title car-title activator grey-text text-darken-4"><%= car.full_name %><i class="material-icons right">more_vert</i></span>
      <p>Price: $<%= car.daily_price %></p>
      <%= link_to car.full_name, store_car_path(car, store: car.store.slug), class: "btn" %>
      <%= link_to "Add to my Garage", cart_cars_path(car_id: car.id), method: :post, class: "add-to-cart" %>
    </div>
    <div class="card-reveal">
      <span class="card-title grey-text text-darken-4">Description: <i class="material-icons right">close</i></span>
      <p><%= car.description.capitalize %></p>
      <p>Price: $<%= car.daily_price %></p>
      <p><%= link_to car.store.name, store_cars_path(store: car.store.slug) %></p>
    </div>
  </div>
</div>
