<h2>Edit User Profile</h2>
<body background="https://d1a3f4spazzrp4.cloudfront.net/web-fresh/home/map-web@2x.gif">


<%= form_for(@user) do |f| %>
  <%= f.label :username, class: "white-text" %>
  <%= f.text_field :username, class: "white-text" %>
  <%= f.label :password, class: "white-text" %>
  <%= f.password_field :password, class: "white-text" %>
  <%= f.label :email, class: "white-text" %>
  <%= f.text_field :email, class: "white-text" %>
  <%= f.label :image, class: "white-text" %>
  <%= f.text_field :image, class: "white-text" %>
  <%= f.submit "Save Changes", class: "btn" %>
<% end %>
