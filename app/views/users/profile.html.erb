
<h1> <%= @user.username.titleize %>'s Profile </h1>

<!DOCTYPE html>
<head>
  <body background="https://d1a3f4spazzrp4.cloudfront.net/web-fresh/home/map-web@2x.gif">
</head>
    <div class="center-align white-text">
      <img class="circle responsive-img" src="https://cdn1.zapnito.com/assets/medium-default-avatar.png" height=200 width=200>


      <div class="row">
        <div class="col s12 offset-6">
          <div class="card grey darken-1 hoverable">
            <div class="card-content white-text">
              <span class="card-title">
              </span>

              </span>
            </div>
            <div class="card-action">
              <p>Email: <%= @user.email %></p>
              <%= link_to "SHOP", cars_path, class:"btn large" %>

            </div>
          </div>
        </div>
      </div>
    </div>
    
<% if @user.store_admin? %>
  <h2>Available Cars</h2>
  <%= render partial: 'partials/show_available_cars', locals: {user: @user} %>
<% end %>

<% if @user.registered_user? %>
  <%= render partial: 'partials/user_order_history', locals: {user: @user} %>
<% end %>
