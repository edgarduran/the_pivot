<head>
  <body background="https://d1a3f4spazzrp4.cloudfront.net/web-fresh/home/map-web@2x.gif">
</head>
<br>
<br>
<br>
<br>
<br>
<h4 class="white-text center-align">Order Number: <%= @order_data[:order_object].id %></h5>
<h5 class="white-text center-align">Order Status: <%= @order_data[:order_object].current_status %></h6>
<h5 class="white-text center-align">Submitted on: <%= @order_data[:order_object].created_at.time.strftime("%b %-d, %Y %-l:%M %p") %></h6>

<br>
<br>
<br>
<br>
<div class="cars-index">

<table class="orders-table">
  <thead>
    <tr>
      <th>Car</th>
      <th>Daily Price</th>
      <th>Days</th>
      <th>Subtotal</th>
    </tr>
  </thead>
  <% @order_data[:order_object].order_items.each do |order_item| %>
  <tbody>
    <tr>
      <td><%= link_to order_item.car.full_name, store_car_path(order_item.car.id, store: order_item.car.store.slug) %></td>
      <td>$<%= order_item.car.daily_price %></td>
      <td><%= order_item.days %></td>
      <td>$<%= order_item.car.daily_price * order_item.days %></td>
    </tr>
    <% end %>
    <tr>
      <td class="left"><strong>Total:</strong></td>
      <td></td>
      <td></td>
      <td class="left"> $<strong><%= @order_data[:total_price] %></strong></td>
    </tr>
  </tbody>
</table>
</div>
